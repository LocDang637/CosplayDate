
{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "installCommand": "npm install",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/payment/cancel",
      "destination": "/index.html"
    },
    {
      "source": "/payment/success", 
      "destination": "/index.html"
    },
    {
      "source": "/payment/:path*",
      "destination": "/index.html"
    },
    {
      "source": "/payment/cancelOrderCode:path*",
      "destination": "/payment/cancel?orderCode=:path"
    },
    {
      "source": "/payment/successOrderCode:path*",
      "destination": "/payment/success?orderCode=:path"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}